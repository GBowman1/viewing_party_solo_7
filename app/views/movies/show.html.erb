<h1> <%= @movie.title %> </h1>

<div id="movie_details">
    <p> <%= @movie.summary %> </p>
    <p> <%= @movie.vote_average %> </p>
    <p> <% @movie.genres.join(", ") %> </p>
    <p> <%= @movie.runtime %> </p>
</div>

<div id="cast">
    <h2> Cast </h2>
    <ul>
        <% @cast.each do |actor| %>
            <li> 
                <p> Name: <%= actor.name %> </p>
                <p> Character: <%= actor.character %> </p>
            </li>
        <% end %>
    </ul>
</div>

<div id="reviews">
    <h2> Reviews </h2>
    <ul>
        <% @reviews.each do |review| %>
            <li>
                <p> <%= review.author %> </p>
                <p> <%= review.content %> </p>
            </li>
        <% end %>
    </ul>
</div>

<div id="page_actions">
</div>